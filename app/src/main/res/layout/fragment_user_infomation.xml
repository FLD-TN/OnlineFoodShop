<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Phần đầu chứa avatar ở giữa và tên người dùng bên dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9933"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Avatar hình tròn ở giữa -->
        <ImageView
            android:id="@+id/avatarImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/circle_image"
            android:src="@drawable/ic_user"
            android:clipToOutline="true"
            android:scaleType="centerInside"
            android:padding="14dp" />

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/txtFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Phần nội dung chứa các chức năng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Chỉnh sửa thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pen_icon"
                android:layout_marginEnd="8dp"
                app:tint="#00FF99" />

            <TextView
                android:id="@+id/btnEditInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa thông tin"
                android:textSize="16sp"
                android:textColor="#333333" />
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/greater_than_symbol"
                app:tint="#808080"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F5F5F5" />
        <!-- Trung tâm trợ giúp -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dauchamhoi_icon"
                android:layout_marginEnd="8dp"
                app:tint="#FF9933" />

            <TextView
                android:id="@+id/btnHelpCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung tâm trợ giúp"
                android:textSize="16sp"
                android:textColor="#333333" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/greater_than_symbol"
                app:tint="#808080"/>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCCCCC" />

        <!-- Chính sách và quy tắc -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/book_pencil_icon"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="1dp"
                app:tint="#FF9933" />

            <TextView
                android:id="@+id/btnTerm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính sách và quy tắc"
                android:textSize="16sp"
                android:textColor="#333333" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/greater_than_symbol"
                app:tint="#808080"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#F5F5F5" />
        <!-- Cài đặt -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings_icon"
                android:layout_marginEnd="8dp"
                app:tint="#0066FF" />

            <TextView
                android:id="@+id/btnSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textSize="16sp"
                android:textColor="#333333" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/greater_than_symbol"
                app:tint="#808080"/>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#CCCCCC" />

        <!-- Thông tin ứng dụng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/danger_icon"
                android:layout_marginEnd="8dp"
                app:tint="#FF9933" />

            <TextView
                android:id="@+id/btnAppInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin ứng dụng"
                android:textSize="16sp"
                android:textColor="#333333" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:src="@drawable/greater_than_symbol"
                app:tint="#808080"/>

        </LinearLayout>


        <!-- Khoảng trống màu xám đến nút đăng xuất -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F5F5F5" />

    </LinearLayout>

    <!-- Nút đăng xuất ở cuối -->
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#FF9933"
        android:text="Đăng xuất"
        android:textColor="@android:color/white" />

</LinearLayout>
